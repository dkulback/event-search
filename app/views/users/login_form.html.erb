<div class="login-form">
  <%= form_with url: login_path, method: :post do |f| %>
    <%= f.label "EMAIL" %>
    <%= f.text_field :email %>
    <%= f.label "LOGIN" %>
    <%= f.text_field :login %>
    <%= f.label "PASSWORD" %>
    <%= f.text_field :password %>
    <%= f.submit 'Log In' %>
  <% end %>
</div>
